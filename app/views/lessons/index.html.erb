<div class="main lessons-index">
  <div class="container2">
  <%= form_with url: lessons_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a lesson"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
  </div>

  <div class="cards mt-4 mb-4">
    <% @lessons.each do |lesson| %>
      <div class="card-group">
        <div class="card">
          <div class="lessons-index-item">
            <%= cl_image_tag lesson.photo.key, height: 300, width: 450, crop: :fill %>
          </div>
          <div class="card__textbox">
            <div class="card__titletext">
              <h2><%= lesson.name %></h2>
            </div>
            <div class="card__overviewtext">
              <p><%= lesson.description %></p>
            </div>
          </div>
            <%= link_to("See more", "lessons/#{lesson.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
