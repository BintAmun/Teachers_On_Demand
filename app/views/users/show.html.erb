<div class="main lessons-index">
  <div class="container">
    <div class="users-show-item">
      <h1><%= @user.name %></h1>
      <br>
        <p>User:</p>
        <p><%= @user.description %></p>
      <div class="post-time">
        <p style="font-size:50%"><%= @user.created_at %></p>
      </div>
      <div class="user-menus">
        <%= link_to("Edit", "/users/#{@user.id}/edit") %>
        <%= link_to "Delete", user_path(@user), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
      <br>

    </div>
  </div>
</div>